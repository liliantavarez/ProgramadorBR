<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Fav Links</title>
  <link rel="stylesheet" href="../style/style.css" />
</head>

<style>
  * {
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  }

  .link:nth-child(odd) {
    background: #CCC
  }

  .link:nth-child(even) {
    background: #EEE
  }

  .buttonClass {
    cursor: pointer;
    font-size: 12px;
    padding: 2px 5px;
    border-width: 2px;
    color: #777777;
    border-color: #dcdcdc;
    font-weight: bold;
    border-radius: 4px;
    border-style: solid;
    box-shadow: inset 0px 1px 0px 0px #ffffff;
    background: linear-gradient(#ededed, #dfdfdf);
  }

  .buttonClass:hover {
    background: linear-gradient(#dfdfdf, #ededed);
  }

  body, .elements {
    display: flex;
    align-items: center;
    flex-direction: column;
  }

  a{
    text-decoration: none;
    font-weight: bold;
  }
  a,a::after{
    color: #797979;
  }
  #addLink:hover{
    text-decoration: underline;
    text-shadow: #CCC 1px 0 10px;
  }
  .elements {
    margin-top: 30px;
  }

  #title {
    margin-bottom: 5px;
  }

  .link {
    overflow-x: hidden;
    width: 300px;
    padding: 5px 15px;
    border-radius: 3px;
    margin-top: 5px;
  }

  #btns {
    margin-top: 10px;
    display: flex;
    justify-content: space-between;
  }


  #description {
    margin-bottom: 5px;
  }
</style>

<body>
  <h1>Links</h1>
  <a id="addLink" href="/add">Adicionar Link</a>
  <section class="elements">
    <% for(let i=0; i< links.length; i++) {%>
    <div id="<%=links[i]._id%>" class="link">
      <h2 id="title"><%=links[i].title%></h2>
      <div id="description"><%=links[i].description%></div>
      <div><%=links[i].url%> </div>
      <br>
      <a target="_blank" href="<%=links[i].url%>">(Acessar site!)</a>
      <div id="btns">
        <button class="buttonClass" onclick="removeLink('<%=links[i]._id%>')">Apagar</button>
        <a class="buttonClass" href='/edit/<%=links[i]._id%>'>Editar</a>
      </div>
    </div>
    <% } %>
  </section>

  <script>
    function removeLink(id) {
      fetch("/" + id, {
        method: "DELETE"
      }).then((res) => {
        if (res.status == 200) {
          res.text().then((linkId) => {
            document.getElementById(linkId).remove();
          });
        } else {
          res.json().then((err) => {
            alert("Documento n√£o encontrado");
          });
        }
      });
    }
  </script>
</body>

</html>